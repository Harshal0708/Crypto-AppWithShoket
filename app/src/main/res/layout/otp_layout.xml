<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/otp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/otp_edittext"
        android:hint="1"
        android:inputType="number"
        android:maxLength="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/otp_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/otp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/otp_edittext"
        android:hint="2"
        android:inputType="number"
        android:maxLength="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="14dp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/otp_1"
        app:layout_constraintEnd_toStartOf="@+id/otp_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otp_1"
        app:layout_constraintTop_toTopOf="@+id/otp_1" />

    <EditText
        android:id="@+id/otp_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/otp_edittext"
        android:hint="3"
        android:inputType="number"
        android:maxLength="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="14dp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/otp_2"
        app:layout_constraintEnd_toStartOf="@+id/otp_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otp_2"
        app:layout_constraintTop_toTopOf="@+id/otp_2" />

    <EditText
        android:id="@+id/otp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/otp_edittext"
        android:hint="4"
        android:inputType="number"
        android:maxLength="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="14dp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/otp_3"
        app:layout_constraintEnd_toStartOf="@+id/otp_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otp_3"
        app:layout_constraintTop_toTopOf="@+id/otp_3" />

    <EditText
        android:id="@+id/otp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/otp_edittext"
        android:hint="5"
        android:inputType="number"
        android:maxLength="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="14dp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/otp_4"
        app:layout_constraintEnd_toStartOf="@+id/otp_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otp_4"
        app:layout_constraintTop_toTopOf="@+id/otp_4" />

    <EditText
        android:id="@+id/otp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/otp_edittext"
        android:hint="6"
        android:inputType="number"
        android:maxLength="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="14dp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/otp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otp_5"
        app:layout_constraintTop_toTopOf="@+id/otp_5" />


</androidx.constraintlayout.widget.ConstraintLayout>